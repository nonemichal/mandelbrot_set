# Add extra compiler flags
CompileFlags:
  Add: [-std=gnu++23]

Diagnostics:
  # Disable warnings about unused includes
  UnusedIncludes: None
  # Disable warnings about missing includes
  MissingIncludes: None

  # Configure clang-tidy
  ClangTidy:
    # Static analyzer checks
    # C++ core guidelines checks
    # Modern C++ usage checks
    # Performance-related checks
    # Readability improvements
    Add:
      - clang-analyzer-*
      - cppcoreguidelines-*
      - modernize-*
      - performance-*
      - readability-*
    CheckOptions:
      # Variables in lower case
      readability-identifier-naming.VariableCase: lower_case
      # Functions in camel case
      readability-identifier-naming.FunctionCase: CamelCase
